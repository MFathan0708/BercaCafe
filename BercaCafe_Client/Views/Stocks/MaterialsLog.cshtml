
@{
    ViewData["Title"] = "Materials Log";
    Layout = "~/Pages/Shared/_DashboardLayout.cshtml";
}
@section css{
    <link href="~/newtemplate/assets/plugins/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet">
    <link href="~/newtemplate/assets/plugins/select2/dist/css/select2.min.css" rel="stylesheet" />
    <link href="~/newtemplate/newdt/datatables-bs4/css/datatables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/newtemplate/newdt/datatables-responsive/css/responsive.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/newtemplate/newdt/datatables-buttons/css/buttons.bootstrap4.min.css" rel="stylesheet" />
}

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-hidden="true" aria-labelledby="exampleModalLabel1">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="exampleModalLabel1">New Order</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="skin skin-square">
                            <div class="form-group">
                                <h5 class="box-title m-t-30">Composition Type :</h5>
                                <select class="select2 form-control custom-select" style="width: 100%; height:36px;" id="compTypeSelector">
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Milk : </label>
                                <div class="row">
                                    <div class="col-sm-5">
                                        <input tabindex="7" type="radio" class="check" id="radioNoMilk" name="radioMilk" data-radio="iradio_square-red" value="">
                                        <label for="radioNoMilk">No Milk</label>
                                    </div>
                                    <div class="col-sm-5">
                                        <input tabindex="7" type="radio" class="check" id="radioLessMilk" name="radioMilk" data-radio="iradio_square-red" value="">
                                        <label for="radioLessMilk">Less Milk</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-5">
                                        <input tabindex="7" type="radio" class="check" id="radioNormalMilk" name="radioMilk" data-radio="iradio_square-red" value="">
                                        <label for="radioNormalMilk">Normal Milk</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Coffee : </label>
                                <div class="row">
                                    <div class="col-sm-5">
                                        <input tabindex="7" type="radio" class="check" id="radioNoCoffee" name="radioCoffee" data-radio="iradio_square-red" value="">
                                        <label for="radioNoCoffee">No Coffee</label>
                                    </div>
                                    <div class="col-sm-5">
                                        <input tabindex="7" type="radio" class="check" id="radioLessCoffee" name="radioCoffee" data-radio="iradio_square-red" value="">
                                        <label for="radioLessCoffee">Less Coffee</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-5">
                                        <input tabindex="7" type="radio" class="check" id="radioNormalCoffee" name="radioCoffee" data-radio="iradio_square-red" value="">
                                        <label for="radioNormalCoffee">Normal Coffee</label>
                                    </div>
                                    <div class="col-sm-5">
                                        <input tabindex="7" type="radio" class="check" id="radioExtraShot" name="radioCoffee" data-radio="iradio_square-red" value="">
                                        <label for="radioExtraShot">Extra Shot</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Sugar : </label>
                                <div class="row">
                                    <div class="col-sm-5">
                                        <input tabindex="7" type="radio" class="check" id="radioNoSugar" name="radioSugar" data-radio="iradio_square-red" value="">
                                        <label for="radioNoSugar">No Sugar</label>
                                    </div>
                                    <div class="col-sm-4">
                                        <input tabindex="7" type="radio" class="check" id="radioLessSugar" name="radioSugar" data-radio="iradio_square-red" value="">
                                        <label for="radioLessSugar">Less Sugar</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-5">
                                        <input tabindex="7" type="radio" class="check" id="radioNormalSugar" name="radioSugar" data-radio="iradio_square-red" value="">
                                        <label for="radioNormalSugar">Normal Sugar</label>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-rounded" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary btn-rounded" onclick="createOrder()">Create Order</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Materials Log</h4>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 ">
                                <button type="button" class="btn waves-effect waves-light btn-rounded btn-info" data-toggle="modal" data-target="#exampleModal">Add Stock</button>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive m-t-40">
                        <table id="tblMaterialsLog" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Composition Name</th>
                                    <th>Materials Name</th>
                                    <th>Materials Quantity</th>
                                    <th>Materials Composition</th>
                                    <th>Materials Unit</th>
                                    <th>Price</th>
                                    <th>Total Price</th>
                                    <th>Input Date</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts{
    <script src="~/newtemplate/assets/plugins/moment/moment.js"></script>
    <script src="~/newtemplate/assets/plugins/select2/dist/js/select2.full.min.js"></script>
    <!-- Date range Plugin JavaScript -->
    <script src="~/newtemplate/assets/plugins/timepicker/bootstrap-timepicker.min.js"></script>
    <script src="~/newtemplate/assets/plugins/bootstrap-daterangepicker/daterangepicker.js"></script>
    <script src="~/js/tablematerialslogjs.js"></script>
    <script src="~/newtemplate/newdt/datatables/jquery.datatables.min.js"></script>
    <script src="~/newtemplate/newdt/datatables-bs4/js/datatables.bootstrap4.min.js"></script>
    <script src="~/newtemplate/newdt/datatables-responsive/js/datatables.responsive.min.js"></script>
    <script src="~/newtemplate/newdt/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/newtemplate/newdt/datatables-buttons/js/datatables.buttons.min.js"></script>
    <script src="~/newtemplate/newdt/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/newtemplate/newdt/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/newtemplate/newdt/datatables-buttons/js/buttons.colvis.min.js"></script>
    <script src="~/newtemplate/newdt/datatables-rowgroup/js/datatables.rowgroup.min.js"></script>
    <script src="~/newtemplate/newdt/jszip/jszip.min.js"></script>
}

