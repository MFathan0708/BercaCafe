
@{
    ViewData["Title"] = "Materials Log";
    ViewData["Page"] = "Stocks";
    Layout = "~/Pages/Shared/_DashboardLayout.cshtml";
}
@section css{
    <link href="~/newtemplate/assets/plugins/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet">
    <link href="~/newtemplate/assets/plugins/sweetalert/sweetalert.css" rel="stylesheet" />
}

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-hidden="true" aria-labelledby="exampleModalLabel1">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="exampleModalLabel1">New Order</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="skin skin-square">
                            <div class="form-group">
                                <h5 class="box-title m-t-30">Brand Type :</h5>
                                <select class="select2 form-control custom-select" style="width: 100%; height:36px;" id="compTypeSelector">
                                </select>
                            </div>
                            <div class="form-group">
                                <h5 class="box-title m-t-30">Brand Name :</h5>
                                <input type="text" class="form-control" id="brandName" placeholder="Fill the name of brand">
                            </div>
                            <div class="form-group">
                                <h5 class="box-title m-t-30">Total :</h5>
                                <input type="number" class="form-control" min="1" value="1" id="total">
                            </div>
                            <div class="form-group">
                                <h5 class="box-title m-t-30">Composition :</h5>
                                <input type="number" class="form-control" min="1" value="1" id="composition">
                            </div>
                            <div class="form-group">
                                <h5 class="box-title m-t-30">Unit :</h5>
                                <select class="select2 form-control custom-select" style="width: 100%; height:36px;" id="unitSelector">
                                    <option selected>ml</option>
                                    <option>gram</option>
                                    <option>bag</option>
                                    <option>pcs</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <h5 class="box-title m-t-30">Price :</h5>
                                <input type="number" class="form-control" min="1" value="1" id="price">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-rounded" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary btn-rounded" onclick="addStock()">Add Stock</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Materials Log</h4>
                    <div class="table-responsive m-t-40">
                        <table id="tblMaterialsLog" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Brand Type</th>
                                    <th>Brand Name</th>
                                    <th>Materials Total</th>
                                    <th>Materials Composition</th>
                                    <th>Materials Unit</th>
                                    <th>Price</th>
                                    <th>Total Price</th>
                                    <th>Input Date</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts{
    <script src="~/newtemplate/assets/plugins/moment/moment.js"></script>
    <!-- Date range Plugin JavaScript -->
    <script src="~/newtemplate/assets/plugins/timepicker/bootstrap-timepicker.min.js"></script>
    <script src="~/newtemplate/assets/plugins/bootstrap-daterangepicker/daterangepicker.js"></script>
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
    <script src="~/js/tablematerialslogjs.js"></script>
    <script src="~/newtemplate/assets/plugins/sweetalert/jquery.sweet-alert.custom.js"></script>
    <script src="~/newtemplate/assets/plugins/sweetalert/sweetalert.min.js"></script>
    <script src="~/newtemplate/assets/plugins/datatables/jquery.datatables.min.js"></script>
    <!-- start - This is for export functionality only -->
    <script src="https://cdn.datatables.net/buttons/1.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.2.2/js/buttons.flash.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/2.5.0/jszip.min.js"></script>
    <script src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/pdfmake.min.js"></script>
    <script src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.2.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.2.2/js/buttons.print.min.js"></script>
}

